@model ControleAlmoxarifado.Models.Itens

@{
    ViewData["Title"] = "Editar Item";
}

<div class="container mt-4">
    <h1 class="h3">Editar Item</h1>
    <hr/>
    
    <form asp-controller="Home" asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="Item" class="form-label"></label>
            <input asp-for="Item" class="form-control" />
            <span asp-validation-for="Item" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantidade" class="form-label"></label>
            <input asp-for="Quantidade" class="form-control" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImagemUrl" class="form-label"></label>
            <input asp-for="ImagemUrl" class="form-control" />
            <span asp-validation-for="ImagemUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>