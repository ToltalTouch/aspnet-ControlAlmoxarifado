@model ControleAlmoxarifado.Models.HomeIndexViewModel

@{
    var pageSize = Model?.PageSize ?? 10; // limite de item por pagina
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar pt-3">
            <div class="sidebar-sticky">
                <h5 class="px-3">Menu</h5>
                <ul class="nav flex-column mt-3">
                    <li class="nav-item px-3 py-1"><a class="nav-link" href="#">Dashboard</a></li>
                    <li class="nav-item px-3 py-1"><a class="nav-link" href="#">Categorias</a></li>
                    <li class="nav-item px-3 py-1"><a class="nav-link" href="#">Entradas</a></li>
                    <li class="nav-item px-3 py-1"><a class="nav-link" href="#">Saídas</a></li>
                    <li class="nav-item px-3 py-1"><a class="nav-link" href="#">Relatórios</a></li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main role="main" class="col-md-10 ml-sm-auto px-4">
            <div class="d-flex align-items-center justify-content-between pt-3 pb-2 mb-3 border-bottom">
                <h2>Almoxarifado Atual</h2>
                    <div class="d-flex align-items-center">
                    <a class="btn btn-success ms-3" href="#">+ Nova Entrada</a>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <form method="get" class="row g-2">
                        <div class="col-12">
                            <div class="me-2" style="min-width:420px;">
                                <input class="form-control" type="search" name="q" value="@(Model?.SearchQuery ?? "")"
                                       placeholder="Buscar Item" aria-label="Buscar">
                            </div>
                        </div>
                        <div class="me-3" style="max-width: 350px;">
                            <select class="form-select" name="category" onchange="this.form.submit()">
                                <option value="">Categoria</option>
                                @foreach (var c in Model.Categories ?? Enumerable.Empty<string>())
                                {
                                    if (c == Model.SelectedCategory)
                                    {
                                        <option value="@c" selected>@c</option>
                                    }
                                    else
                                    {
                                        <option value="@c">@c</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-md-3" style="max-width: 135px;">
                            <select class="form-select" name="size" onchange="this.form.submit()">
                                <option value="">Tamanhos</option>
                                @foreach (var s in Model.SizeOptions ?? Enumerable.Empty<string>())
                                {
                                    if (s == Model.SelectedSize)
                                    {
                                        <option value="@s" selected>@s</option>
                                    }
                                    else
                                    {
                                        <option value="@s">@s</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-md-3" style="max-width: 130px;">
                            <select class="form-select" name="gender" onchange="this.form.submit()">
                                <option value="">Gênero</option>
                                @foreach (var g in Model.GenderOptions ?? Enumerable.Empty<string>())
                                {
                                    if (g == Model.SelectedGender)
                                    {
                                        <option value="@g" selected>@g</option>
                                    }
                                    else
                                    {
                                        <option value="@g">@g</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-md-3" style="max-width: 120px;">
                            <select class="form-select" name="status" onchange="this.form.submit()">
                                <option value="">Status</option>
                                @foreach (var s in Model.Statuses ?? Enumerable.Empty<string>())
                                {
                                    if (s == Model.SelectedStatus)
                                    {
                                        <option value="@s" selected>@s</option>
                                    }
                                    else
                                    {
                                        <option value="@s">@s</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-md-3">
                            <div class="d-flex justify-content-end">
                                <a class="btn btn-outline-secondary me-2" href="@Url.Action("Index", new { page = 1, pageSize = Model?.PageSize ?? 10 })">
                                    Limpar Filtros
                                </a>
                            </div>
                        </div>
                        <script>
                        (function() {
                            const btn = document.getElementById('resetFilters');
                            btn?.addEventListener('click', function() {
                                const form = btn.closest('form') || document.querySelector('form');
                                if(!form) return;

                                form.querySelectorAll('select, input[type="search"], input[type="text"]').forEach(e => {
                                    if (e.tagName === 'SELECT') e.selectedIndex = 0;
                                    else e.value = '';
                                });

                                let pageInput = form.querySelector('input[name="page"]');
                                if (!pageInput) {
                                    pageInput = document.createElement('input');
                                    pageInput.type = 'hidden';
                                    pageInput.name = 'page';
                                    form.appendChild(pageInput);
                                }
                                pageInput.value = '1';
                                form.submit();
                            });
                        })();
                        </script>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="max-width:110px;">Imagem</th>
                                    <th style="max-width:260px;">Item</th>
                                    <th style="max-width:100px;">Tamanho</th>
                                    <th style="max-width:110px;">QNT</th>
                                    <th style="max-width:100px;">Gênero</th>
                                    <th style="max-width:110px;">Local</th>
                                    <th style="max-width:90px;">Status</th>
                                    <th></th>
                                    <th style="width:90px">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Items != null && Model.Items.Any())
                                {
                                    foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <img src="@item.ImagemUrl" class="img-thumbnail" style="max-width:120px;" alt="@item.Item" />
                                            </td>
                                            <td>@item.Item</td>
                                            <td>@item.Tamanho</td>
                                            <td data-quantity-id="@item.Id">@item.Quantidade</td>
                                            <td>@item.Genero</td>
                                            <td>@item.Local</td>
                                            <td>@(item.Quantidade > 0 ? "OK" : "Baixo")</td>
                                            <td></td>
                                            <td>
                                                <a href="javascript:void(0)" class="btn btn-sm btn-outline-primary me-1 btn-edit" data-id="@item.Id" title="Editar">✏️</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center">Nenhum item encontrado.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="modal fade" id="modalEdit" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content" id="modalEditContent">
                        </div>
                    </div>
                </div>
                </div>

                <div class="card-footer">
                    @await Html.PartialAsync("_Pagination", Model)
                </div>
            </div>
        </main>
    </div>
</div>