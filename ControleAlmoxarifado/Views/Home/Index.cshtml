@model ControleAlmoxarifado.Models.HomeIndexViewModel

@{
    var pageSize = Model?.PageSize ?? 10; // limite de item por pagina
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar pt-3">
            <div class="sidebar-sticky">
                <h5 class="px-3">Menu</h5>
                <ul class="nav flex-column mt-3">
                    <li class="nav-item px-3 py-1"><a class="nav-link" href="#">Dashboard</a></li>
                    <li class="nav-item px-3 py-1"><a class="nav-link" href="#">Categorias</a></li>
                    <li class="nav-item px-3 py-1"><a class="nav-link" href="#">Entradas</a></li>
                    <li class="nav-item px-3 py-1"><a class="nav-link" href="#">Saídas</a></li>
                    <li class="nav-item px-3 py-1"><a class="nav-link" href="#">Relatórios</a></li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main role="main" class="col-md-10 ml-sm-auto px-4">
            <div class="d-flex align-items-center justify-content-between pt-3 pb-2 mb-3 border-bottom">
                <h2>Almoxarifado Atual</h2>
                <div class="d-flex align-items-center">
                    <div class="me-2" style="min-width:420px;">
                        <input class="form-control" type="search" placeholder="Buscar SKU, Nome, Nº Série..." aria-label="Buscar">
                    </div>
                    <a class="btn btn-success ms-3" href="#">+ Nova Entrada</a>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <form method="get" class="row g-2">
                        <div class="me-3">
                            <select class="form-select" name="category" onchange="this.form.submit()">
                                <option value="">Categoria: Todas</option>
                                @foreach (var c in Model.Categories ?? Enumerable.Empty<string>())
                                {
                                    if (c == Model.SelectedCategory)
                                    {
                                        <option value="@c" selected>@c</option>
                                    }
                                    else
                                    {
                                        <option value="@c">@c</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-md-3">
                            <select class="form-select" name="size" onchange="this.form.submit()">
                                <option value="">Tamanho: Todos</option>
                                @foreach (var s in Model.SizeOptions ?? Enumerable.Empty<string>())
                                {
                                    if (s == Model.SelectedSize)
                                    {
                                        <option value="@s" selected>@s</option>
                                    }
                                    else
                                    {
                                        <option value="@s">@s</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-md-3">
                            <select class="form-select" name="gender" onchange="this.form.submit()">
                                <option value="">Gênero: Todos</option>
                                @foreach (var g in Model.GenderOptions ?? Enumerable.Empty<string>())
                                {
                                    if (g == Model.SelectedGender)
                                    {
                                        <option value="@g" selected>@g</option>
                                    }
                                    else
                                    {
                                        <option value="@g">@g</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-md-3">
                            <select class="form-select" name="status" onchange="this.form.submit()">
                                <option value="">Status: Todos</option>
                                @foreach (var s in Model.Statuses ?? Enumerable.Empty<string>())
                                {
                                    if (s == Model.SelectedStatus)
                                    {
                                        <option value="@s" selected>@s</option>
                                    }
                                    else
                                    {
                                        <option value="@s">@s</option>
                                    }
                                }
                            </select>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="max-width:120px;">Imagem</th>
                                    <th>Item</th>
                                    <th>Tamanho</th>
                                    <th>Quantidade</th>
                                    <th>Gênero</th>
                                    <th>Local</th>                                
                                    <th>Status</th>
                                    <th></th>
                                    <th style="width:120px">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Items != null && Model.Items.Any())
                                {
                                    var itemsToShow = Model.Items.Take(pageSize);
                                    foreach (var item in itemsToShow)
                                    {
                                        <tr>
                                            <td>
                                                <img src="@item.ImagemUrl" class="img-thumbnail" style="max-width:120px;" alt="@item.Item" />
                                            </td>
                                            <td>@item.Item</td>
                                            <td>@item.Tamanho</td>
                                            <td>@item.Quantidade</td>
                                            <td>@item.Genero</td>
                                            <td>@item.Local</td>
                                            <td>@(item.Quantidade > 0 ? "OK" : "Baixo")</td>
                                            <td></td>
                                            <td>
                                                <a class="btn btn-sm btn-outline-primary me-1" href="@Url.Action("Edit", "Home", new { id = item.Id })">✏️</a>
                                                <!-- <a class="btn btn-sm btn-outline-secondary" href="#">⋮</a> -->
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center">Nenhum item encontrado.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between align-items-center">
                    <div>
                        @if (Model != null && Model.TotalPages > 0)
                        {
                            var start = (Model.Page - 1) * Model.PageSize + 1;
                            var end = Math.Min(Model.Page * Model.PageSize, Model.TotalItems);
                            <span>Mostrando @start a @end de @Model.TotalItems</span>
                        }
                    </div>

                    <nav aria-label="Paginação">
                        <ul class="pagination mb-0">

                            @{
                                var startPage = Math.Max(1, Model.Page - 2);
                                var endPage = Math.Min(Model.TotalPages, Model.Page + 2);
                                for (int p = startPage; p <= endPage; p++)
                                {
                                    var active = p == Model.Page ? "active" : "";
                                }
                            }
                            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = Model.Page - 1, pageSize = Model.PageSize })">Anterior</a>
                            </li>
                            @for (int p = Math.Max(1, Model.Page - 2); p <= Math.Min(Model.TotalPages, Model.Page + 2); p++)
                            {
                                <li class="page-item @(p == Model.Page ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = p, pageSize = pageSize})">@p</a>
                                </li>
                            }

                            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = Model.Page + 1, pageSize = pageSize })">Próximo</a>
                            </li>
                            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = Model.TotalPages, pageSize = pageSize })">Última</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </main>
    </div>
</div>